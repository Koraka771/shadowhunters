<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
        <div>
            <h1><input name="name" type="text" value="{{actor.name}}" placeholder="Name" /></h1>
            <div class="header-description">
                <label>{{localize "shadowhunters.level"}}:</label>
                <input type="text" data-dtype="number" name="system.level" value="{{actor.system.level}}">
                <label>{{localize "shadowhunters.description"}}:</label>
                <input type="text" name="system.description" value="{{actor.system.description}}">
            </div>
        </div>
    </header>
    <div class="sheet-body">
        <div class="sheet-body-main">
            <div class="left">
                <div class="hpdef">
                    <div class="def">
                        <h2>{{localize "shadowhunters.defense"}}</h2>
                        <input type="text" data-dtype="number" name="system.defense" value="{{actor.system.defense}}">
                    </div>
                    <div class="hp">
                        <h2>{{localize "shadowhunters.hitpoints"}}</h2>
                        <div class="hprow">
                            <input type="text" data-dtype="Number" name="system.hp.value" value="{{actor.system.hp.value}}">
                            <span>|</span>
                            <input type="text" data-dtype="Number" name="system.hp.max" value="{{actor.system.hp.max}}">
                        </div>
                        <div class="hpdescrow">
                            <span>{{localize "shadowhunters.current"}}</span>
                            <span>{{localize "shadowhunters.maximum"}}</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="right">
                <div class="section-header">
                    <h2>{{localize "shadowhunters.attacks"}}</h2>
                    <a class="item-control" data-action="create" data-type="monsterattack"><i class="fas fa-plus"></i></a>
                </div>
                <ol class="item-list">
                    {{#each monsterattacks as |item id|}}
                        <li class="item" data-item-id="{{item._id}}">
                            <a class="item-name">{{item.name}}</a>
                            <div class="item-buttons">

                            </div>
                            <div class="item-controls">
                                <a class="item-control" data-action="edit"><i class="fas fa-edit"></i></a>
                                <a class="item-control" data-action="delete"><i class="fas fa-trash"></i></a>
                            </div>
                        </li>
                    {{/each}}
                </ol>
                <div class="section-header">
                    <h2>{{localize "shadowhunters.features"}}</h2>
                    <a class="item-control" data-action="create" data-type="feat"><i class="fas fa-plus"></i></a>
                </div>
                <ol class="item-list">
                    {{#each feats as |item id|}}
                        <li class="item" data-item-id="{{item._id}}">
                            <a class="item-name">{{item.name}}</a>
                            <div class="item-controls">
                                <a class="item-control" data-action="edit"><i class="fas fa-edit"></i></a>
                                <a class="item-control" data-action="delete"><i class="fas fa-trash"></i></a>
                            </div>
                        </li>
                    {{/each}}
                </ol>  
                <div class="section-header">
                    <h2>{{localize "shadowhunters.spells"}}</h2>
                    <a class="item-control" data-action="create" data-type="spell"><i class="fas fa-plus"></i></a>
                </div>
                <ol class="item-list">
                    {{#each spells as |item id|}}
                        <li class="item" data-item-id="{{item._id}}">
                            <a class="item-name">{{item.name}}</a>
                            <div class="item-controls">
                                <a class="item-control" data-action="edit"><i class="fas fa-edit"></i></a>
                                <a class="item-control" data-action="delete"><i class="fas fa-trash"></i></a>
                            </div>
                        </li>
                    {{/each}}
                </ol>          
            </div>
        </div>
    </div>
</form>