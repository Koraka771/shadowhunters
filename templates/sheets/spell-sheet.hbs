<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
    </header>
    <div class="sheet-body">
        <div>
            <h2>{{localize "shadowhunters.attributes"}}</h2>
            <div class="sheet-body-attributes">
                <label>{{localize "shadowhunters.level"}}</label>
                <input type="number" name="system.level" value="{{item.system.level}}">
                <label>{{localize "shadowhunters.type"}}</label>            
                <select name="system.spellType">
                    {{#select item.system.spellType}}
                    {{#each config.spellTypes as |name type|}}
                    <option value="{{type}}">{{localize name}}</option>
                    {{/each}}
                    {{/select}}
                </select>
                {{#if (eq item.system.spellType "damage")}}
                <label>{{localize "shadowhunters.damage"}}</label>
                <input type="text" name="system.damage" value="{{item.system.damage}}">
                {{/if}}
            </div>
        </div>
        <div>
            <h2>{{localize "shadowhunters.description"}}</h2>
            <div class="sheet-body-description">
                {{editor item.system.description target="system.description" button=true owner=owner editable=editable}}
            </div>
        </div>
    </div>
</form>
